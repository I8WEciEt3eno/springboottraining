spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver


spring.sql.init.mode=always

# コネクションプールの最大サイズ
spring.datasource.hikari.maximum-pool-size=100

# コネクションタイムアウト（ミリ秒）
spring.datasource.hikari.connection-timeout=30000000000000000

# アイドル状態のコネクションの最大存続時間（ミリ秒）
spring.datasource.hikari.idle-timeout=6000000000000

# コネクションの最大存続時間（ミリ秒）
spring.datasource.hikari.max-lifetime=1800000000000